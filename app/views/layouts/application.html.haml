!!!
%html{:class => 'no-js'}

  %head
    %title
      = title_set? ? "Manitoba Election - " + yield(:title) : "Manitoba Election"

    %meta{:charset => 'utf-8'}/
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    %meta{'http-equiv' => 'cleartype', :content => 'on'}/
    %meta{:name => 'HandheldFriendly', :content => 'True'}/
    %meta{:name => 'MobileOptimized', :content => '320'}/
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=0'}/
    %meta{:name => 'keywords', :content => 'Manitoba election, Manitoba provincial election, Manitoba, provincial election, election, MLA, Member of Legislative Assembly, Premier, politics, government, democracy, Manitoba, Canada' }/
    %meta{:name => 'description', :content => 'Get to know your MLA candidates for the upcoming Manitoba provincial election. Explore candidate related news, election information, and more.'}/

    %link{:href => "/favicon.ico?1", :rel => "shortcut icon", :type => "image/vnd.microsoft.icon"}/
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "droplist-flyout"
    = javascript_include_tag 'modernizr-2.0.6.js'

    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      %header
        %h1
          = link_to 'Manitoba Election', '/'
        %h3
          A Citizen Created Election Resource

      = render :partial => 'shared/menu'

      %div#main{:role => 'main'}
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"

        - if show_breadcrumbs?
          %p.breadcrumbs
            = link_to 'home', '/'
            = yield(:current_crumbs)

        - if show_title?
          %h2.title= yield(:title)

        %div.flow_it
          %div.three_columns.notice
            <p><strong>The information below is from the 2011 Manitoba Election.</strong></p>
            <p>We are working on a new version of this site for the upcoming 2016 Manitoba Election on April 19th.</p>
            <p><a href="http://goo.gl/forms/5d4wuvp0Uz" style="text-decoration: underline;">Leave us your contact details</a> if you wish to be notified when the new site launches.</p>
            <p>For more information on the 2016 Manitoba Election see <a href="http://www.electionsmanitoba.ca">Elections Manitoba</a>.</p>


        = yield

      %footer
        %p
          Manitoba Election - All content is public domain.

    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js'
    %script
      window.jQuery || document.write("\x3Cscript src='/javascripts/jquery-1.6.2.min.js'>\x3C/script>")
    = javascript_include_tag :defaults
    = yield(:bottom_scripts)

